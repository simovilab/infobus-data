# Production Environment Overrides
# This file contains ONLY production-specific settings that override defaults from .env
# IMPORTANT: Change these values for production!

SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION-use-django-secret-key-generator
DEBUG=False

# Production Database (override default credentials)
DB_PASSWORD=postgres  # CHANGE THIS IN PRODUCTION!
DATABASE_URL=postgresql://postgres:postgres@db:5432/infobus_data  # Update with production password

# Production-specific Django settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com  # Add your domain here

# Security Settings (for production)
SECURE_SSL_REDIRECT=False  # Set to True when you have HTTPS
SECURE_HSTS_SECONDS=31536000  # 1 year
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False  # Set to True when you have HTTPS
CSRF_COOKIE_SECURE=False  # Set to True when you have HTTPS

# Logging
LOG_LEVEL=INFO

# Geospatial Libraries (Docker paths)
GDAL_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgdal.so
GEOS_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/libgeos_c.so

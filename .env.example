# Production Environment Variables
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/infobus_data

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Django Settings
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/app/staticfiles
MEDIA_ROOT=/app/media

# Logging
LOG_LEVEL=INFO

# Prometheus (if using)
PROMETHEUS_METRICS_PORT=8001

# External APIs (transit feeds)
# Add your transit API URLs and keys here
# TRANSIT_API_URL=https://api.example.com/gtfs-realtime
# TRANSIT_API_KEY=your-api-key-here